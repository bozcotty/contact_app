<h2>Spaceships in the Surgery Fleet:</h2>

<table>
  <thead>
    <tr>
      <th>Ship Name</th>
      <th colspan="3"></th>
      <th>Ship Type</th>
      <th colspan="3"></th>
    </tr>
    <tr>

    </tr>
  </thead>

  <tbody>
    <% @spaceships.each do |spaceship| %>
      <tr>
        <td><%= spaceship.name %></td>
        <td colspan="3"></td>
        <td><%= spaceship.ship_type %></td>
        <td colspan="3"></td>
        <td><%= link_to 'Show', spaceship %></td>
        <td><%= link_to 'Edit', edit_spaceship_path(spaceship) %></td>
        <td><%= link_to 'Destroy', spaceship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

