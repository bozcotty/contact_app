<h1>Listing abductees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abductees.each do |abductee| %>
      <tr>
        <td><%= abductee.name %></td>
        <td><%= link_to 'Show', abductee %></td>
        <td><%= link_to 'Edit', edit_abductee_path(abductee) %></td>
        <td><%= link_to 'Destroy', abductee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

